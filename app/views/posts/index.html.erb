<div class="container">
  <section class="">
    <article>
      <img src="<%= @user.photo %>" width="100px" height="100px" alt="User Image Tag">
    </article>
    <article>
      <h2> <%= @user.name %> </h2>
      <p> posts status: <%= @user.posts.length %> </p>
    </article>
  </section>

<% @user.posts.each do |post| %>
  <section class="">
    <div>
      <%= link_to user_post_path(@user.id, post.id), id: "user_post #{post.id}" do %>
        <h4> <%= post.title %> </h4>
      <% end %>

      <p> <%= post.text %> </p>

      <div>
        <span> Comments: <%= post.comments.size %> </span>
      </div>
    </div>

    <div>
      <% unless post.comments.empty? %>
        <div>
          <% post.five_most_recent_comments.each do |comment| %>
            <div>
              <li> <%= comment.author.name %> : <%= comment.text %> </li>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </section>
<% end %>
  <div>
    <button type="submit"> Pagination </button>
  </div>
</div>